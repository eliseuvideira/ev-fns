{
  "compilerOptions": {
    "module": "CommonJS",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "lib",
    "target": "ES2020"
  }
}
